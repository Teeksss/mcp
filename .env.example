# Application Settings
APP_NAME=MCP_Server
ENV=development
DEBUG=True
LOG_LEVEL=DEBUG

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/mcp_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=100

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# Security Settings
JWT_SECRET=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRY=3600
MFA_ENABLED=True

# Model Settings
MODEL_BASE_PATH=/app/models
MODEL_CACHE_SIZE=8192
MIN_FREE_MEMORY=0.2
BATCH_SIZE_MIN=1
BATCH_SIZE_MAX=128

# Monitoring Settings
PROMETHEUS_ENABLED=True
METRICS_PORT=9090